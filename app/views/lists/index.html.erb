<h1>Listing lists</h1>

<table border=2>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td>
            <h2> <%= link_to list.title,list %></h2>           
            <p><%= list.content %></p>
        </td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

